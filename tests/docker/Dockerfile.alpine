# Alpine test environment (simulates BSD/macOS differences)
# Alpine uses BusyBox coreutils (like BSD, not GNU)
FROM alpine:3.19

# Install dependencies
# Note: Alpine uses BusyBox which has BSD-like behavior
RUN apk add --no-cache \
    git \
    perl \
    bash \
    tmux \
    zsh \
    curl

# Install stow from source (not in Alpine repos)
RUN cd /tmp && \
    wget https://ftp.gnu.org/gnu/stow/stow-2.4.1.tar.gz && \
    tar -xzf stow-2.4.1.tar.gz && \
    cd stow-2.4.1 && \
    ./configure --prefix=/usr/local && \
    make && \
    make install && \
    cd / && \
    rm -rf /tmp/stow-2.4.1*

# Create test user
RUN adduser -D -s /bin/bash testuser

# Switch to test user
USER testuser
WORKDIR /home/testuser

# Set up git config
RUN git config --global user.name "Test User" && \
    git config --global user.email "test@example.com"

CMD ["/bin/bash"]

