#!/usr/bin/env bash
# Lint all Markdown files

set -o pipefail

# Check if npx is available
if ! command -v npx >/dev/null 2>&1; then
  echo "Error: npx not found" >&2
  echo "" >&2
  echo "Install Node.js to get npx:" >&2
  echo "  macOS:  brew install node" >&2
  echo "  Ubuntu: sudo apt-get install nodejs npm" >&2
  echo "" >&2
  echo "Or run: ./dev/setup" >&2
  exit 1
fi

npx --yes markdownlint-cli@0.42.0 "**/*.md"

