{
  // Task runner configuration for common dotfiles operations
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Smoke Tests",
      "type": "shell",
      "command": "./tests/smoke-test.sh",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Run Local CI",
      "type": "shell",
      "command": "./tests/run-local-ci.sh",
      "problemMatcher": [],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Run BATS Tests",
      "type": "shell",
      "command": "./tests/run-bats.sh",
      "problemMatcher": [],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Lint Markdown",
      "type": "shell",
      "command": "markdownlint '**/*.md'",
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Lint Shell Scripts",
      "type": "shell",
      "command": "shellcheck dot bash/.bashrc* bash/.bash_profile zsh/.zshrc* zsh/.zprofile tests/**/*.sh",
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Lint All",
      "dependsOn": ["Lint Markdown", "Lint Shell Scripts"],
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Install Dotfiles",
      "type": "shell",
      "command": "./dot install -vv",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Update Dotfiles",
      "type": "shell",
      "command": "./dot update -vv",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Health Check",
      "type": "shell",
      "command": "./dot health -v",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}


