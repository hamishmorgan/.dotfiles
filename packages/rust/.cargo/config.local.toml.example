# Machine-specific cargo configuration
# Copy to ~/.cargo/config.local.toml and customize
#
# This file is for:
# - Private registries and credentials
# - Machine-specific build settings
# - Employer-specific configurations
# - Target-specific compiler flags

# Example: Private registry configuration
# [registries.company-rust]
# index = "sparse+https://cargo.example.com/company/rust/"
# credential-provider = "cargo:token"

# Example: Registry authentication
# [registry]
# token = "your-crates-io-token"

# Example: Target-specific linker
# [target.x86_64-unknown-linux-gnu]
# linker = "clang"
# rustflags = ["-C", "link-arg=-fuse-ld=lld"]

# Example: Build optimization for specific machine
# [build]
# jobs = 12
# rustflags = ["-C", "target-cpu=native"]

# Example: HTTP/Git configuration
# [http]
# proxy = "http://proxy.example.com:8080"
# timeout = 60

