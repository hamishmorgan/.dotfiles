# EditorConfig is awesome: https://editorconfig.org
# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Shell scripts, YAML, JSON
[*.{sh,bash,zsh,yml,yaml,json}]
indent_style = space
indent_size = 2

# Python
[*.py]
indent_style = space
indent_size = 4

# Makefiles require tabs
[Makefile]
indent_style = tab

# Markdown - preserve trailing whitespace (used for line breaks)
[*.md]
trim_trailing_whitespace = false

# Go requires tabs
[*.go]
indent_style = tab

# Ruby
[*.rb]
indent_style = space
indent_size = 2

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

