# User information configured in ~/.gitconfig.local (machine-specific)
# See .gitconfig.local.example for setup instructions

[alias]
	# Basic shortcuts
	st = status
	ci = commit
	co = checkout
	br = branch
	sw = switch
	rs = restore
	rb = rebase

	# Status and information
	s = status -s
	short = status --short
	untracked = ls-files --others --exclude-standard
	last = log -1 HEAD
	who = blame
	when = log --pretty=format:"%h %ad %s" --date=short --author

	# Log formats
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ll = !git --no-pager log --graph --all --decorate --pretty=format:'%C(auto)%h%d  %ad %C(red bold)(%ar%C(red bold))%Creset  %Creset%C(magenta)%an %Creset<%ae>  %C(white bold)%<(80,trunc)%s' --date=iso
	l = !git --no-pager log -n 40 --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(blue bold)<%an>%Creset'
	lg = log --oneline --decorate --graph --all
	lgp = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

	# Branch and remote management
	tags = tag -l
	branches = branch -av
	remotes = remote -v
	new = "!f() { git checkout -b $1; }; f"
	del = branch -D
	cleanup = "!git branch --merged | grep -v '\\*\\|main\\|master' | xargs -n 1 git branch -d"
	dm = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"

	# Commit operations
	amend = commit --amend --reuse-message=HEAD
	commend = commit --amend --no-edit
	fix = commit --fixup
	ac = "!git add . && git commend"
	uncommit = reset --soft HEAD~1
	undo = reset --hard HEAD~1
	unstage = reset HEAD --

	# Diff and comparison
	diffc = diff --cached
	diffw = diff --word-diff
	diffp = diff --patience

	# Push and pull
	forcepush = push --force-with-lease
	visual = !cursor

[core]
	editor = cursor -w
	excludesfile = ~/.gitignore-globals
	attributesFile = ~/.gitattributes
	commitTemplate = ~/.gitmessage

	# Line ending configuration
	eol = native
	autocrlf = input
	safecrlf = true
	ignorecase = false

	# macOS specific
	trustctime = false
	precomposeunicode = false

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = green

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[diff]
	renames = copies
	algorithm = patience
	colorMoved = default
	colorMovedWS = ignore-all-space

[diff "zip"]
	textconv = unzip -p
	binary = true

# Compression tools - wrapped for graceful fallback if not installed
[diff "gz"]
	textconv = sh -c 'command -v gzcat >/dev/null 2>&1 && gzcat "$@" || cat' sh
	binary = true

[diff "bz2"]
	textconv = sh -c 'command -v bzcat >/dev/null 2>&1 && bzcat "$@" || cat' sh
	binary = true

[diff "xz"]
	textconv = sh -c 'command -v xzcat >/dev/null 2>&1 && xzcat "$@" || cat' sh
	binary = true

# Archive tools - tar is standard on macOS
[diff "tar"]
	textconv = tar -O -xf
	binary = true

[diff "tar-bz2"]
	textconv = sh -c 'command -v bzcat >/dev/null 2>&1 && tar -O -xjf "$@" || cat' sh
	binary = true

[diff "tar-gz"]
	textconv = tar -O -xzf
	binary = true

[diff "tar-xz"]
	textconv = sh -c 'command -v xzcat >/dev/null 2>&1 && tar -O -xJf "$@" || cat' sh
	binary = true

# Document tools - wrapped for graceful fallback if not installed
[diff "odf"]
	textconv = sh -c 'command -v odt2txt >/dev/null 2>&1 && odt2txt "$@" || cat' sh

[diff "pdf"]
	textconv = sh -c 'command -v pdfinfo >/dev/null 2>&1 && pdfinfo "$@" || cat' sh

[diff "bin"]
	textconv = hexdump -v -C

[apply]
	whitespace = fix

[push]
	default = current
	autoSetupRemote = true

[pull]
	ff = only

[init]
	defaultBranch = main

[submodule]
	recurse = true

[rerere]
	enabled = true
	autoupdate = true

[branch]
	autosetuprebase = always

[merge]
	tool = vimdiff
	conflictstyle = zdiff3

[rebase]
	autosquash = true
	autostash = true

# GPG signing enabled, but method configured per-machine in ~/.gitconfig.local
[commit]
	gpgsign = true

# Machine-specific configuration (not version-controlled)
# Configure signing method here (1Password, Yubikey, etc.)
[include]
	path = ~/.gitconfig.local

[credential "https://github.com"]
	helper =
	helper = !/usr/bin/env gh auth git-credential
[credential "https://gist.github.com"]
	helper =
	helper = !/usr/bin/env gh auth git-credential
[maintenance]
	repo = /Users/hamish/world/trees/root/src
