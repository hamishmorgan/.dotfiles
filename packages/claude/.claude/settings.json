{
  "includeCoAuthoredBy": true,
  "permissions": {
    "allow": [
      "Bash(env)",
      "Bash(readlink:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(gt:*)",
      "Bash(make:*)",
      "Bash(cargo:*)",
      "Bash(rustc:*)",
      "Bash(ruby:*)",
      "Bash(bundle:*)",
      "Bash(gem:*)",
      "Bash(rails:*)",
      "Bash(npm:*)",
      "Bash(yarn:*)",
      "Bash(python:*)",
      "Bash(pip:*)",
      "Bash(uv:*)",
      "Bash(uvx:*)",
      "Bash(rg:*)",
      "Bash(fd:*)",
      "Bash(fzf:*)",
      "Bash(jq:*)",
      "Bash(yq:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(less:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(diff:*)",
      "Bash(echo:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(ln:*)",
      "Bash(stow:*)",
      "Bash(shellcheck:*)",
      "Bash(markdownlint:*)",
      "Read(**)",
      "WebSearch"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~/*)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/secrets/**)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Bash(dd:*)"
    ],
    "ask": ["Bash(git push --force:*)", "Bash(rm -rf:*)"]
  },
  "alwaysThinkingEnabled": false,
  "autoUpdaterStatus": "enabled"
}
