{
  // ============================================================================
  // Cursor-Specific Settings
  // ============================================================================
  "cursor.composer.shouldAllowCustomModes": true,
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "cursor.composer.queueMessageDefaultBehavior": "queue",
  "cursor.composer.usageSummaryDisplay": "always",
  "cursor.cpp.enablePartialAccepts": true,
  "cursor.diffs.useCharacterLevelDiffs": true,
  "cursor.windowSwitcher.sidebarHoverCollapsed": true,
  // ============================================================================
  // Editor Appearance & Behavior
  // ============================================================================
  "workbench.colorTheme": "Spinel",
  "workbench.iconTheme": "vscode-icons",
  "workbench.editor.wrapTabs": true,
  "window.density.editorTabHeight": "compact",
  "editor.stickyTabStops": true,
  // Inline suggestions and autocomplete
  "editor.inlineSuggest.showToolbar": "always",
  "editor.quickSuggestions": {
    "comments": "on",
    "strings": "on"
  },
  "editor.quickSuggestionsDelay": 0,
  "editor.suggest.matchOnWordStartOnly": false,
  "editor.suggest.preview": true,
  "editor.suggest.showStatusBar": true,
  // ============================================================================
  // Git & Version Control
  // ============================================================================
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "always",
  "diffEditor.ignoreTrimWhitespace": true,
  "gitlens.rebaseEditor.ordering": "asc",
  // GitHub Pull Requests
  "githubPullRequests.pullBranch": "never",
  "githubPullRequests.terminalLinksHandler": "github",
  // ============================================================================
  // GitHub Copilot & AI Chat
  // ============================================================================
  "github.copilot.selectedCompletionModel": "",
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.chat.generateTests.codeLens": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.enable": {
    "markdown": true,
    "plaintext": true,
    "scminput": true
  },
  // Chat settings
  "chat.tools.autoApprove": true,
  "chat.agent.maxRequests": 1000,
  "chat.mcp.discovery.enabled": true,
  "chat.mcp.serverSampling": {
    "Global in Code: github": {
      "allowedModels": [
        "github.copilot-chat/claude-3.5-sonnet",
        "github.copilot-chat/claude-3.7-sonnet",
        "github.copilot-chat/claude-3.7-sonnet-thought",
        "github.copilot-chat/claude-sonnet-4",
        "github.copilot-chat/gemini-2.0-flash-001",
        "github.copilot-chat/gemini-2.5-pro",
        "github.copilot-chat/gpt-4.1",
        "github.copilot-chat/gpt-4o",
        "github.copilot-chat/o3-mini",
        "github.copilot-chat/o4-mini"
      ]
    }
  },
  // ============================================================================
  // Terminal
  // ============================================================================
  "terminal.integrated.scrollback": 100000,
  "terminal.integrated.enableImages": true,
  // Terminal search highlighting
  "workbench.colorCustomizations": {
    "terminal.findMatchBackground": "#dddd00",
    "terminal.findMatchBorder": "#dddd00",
    "terminal.findMatchHighlightBackground": "#dddd00",
    "terminal.findMatchHighlightBorder": "#dddd00",
    "terminalOverviewRuler.findMatchForeground": "#dddd00"
  },
  // ============================================================================
  // File Explorer
  // ============================================================================
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },
  // ============================================================================
  // Language-Specific Settings
  // ============================================================================
  // Ruby
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.rulers": [
      120
    ],
    "editor.semanticHighlighting.enabled": true
  },
  // JSON
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  // Docker Compose
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  // GitHub Actions
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  // ============================================================================
  // Extensions
  // ============================================================================
  // Ruby LSP
  "rubyLsp.rubyVersionManager": {
    "identifier": "mise"
  },
  // NOTE: This path is machine-specific. Users should customize via .local config or override in Cursor.
  // Option 1: Leave empty to use mise default detection
  // Option 2: Override in Cursor settings to match your local setup
  "rubyLsp.rubyExecutablePath": "",
  "rubyLsp.featureFlags": {
    "tapiocaAddon": false
  },
  // Sorbet
  "sorbet.highlightUntyped": "everywhere",
  // Code Spell Checker
  "cSpell.enableFiletypes": [
    "ruby"
  ],
  "cSpell.userWords": [
    "autorun",
    "autofetch",
    "cadetgear",
    "chacha",
    "chebyshev",
    "chsh",
    "clippy",
    "concatcp",
    "coreutils",
    "curcontext",
    "dataclass",
    "Datetime",
    "Deque",
    "dpkg",
    "esac",
    "extglob",
    "filemode",
    "fulfillable",
    "gitmodules",
    "Geolocator",
    "gsort",
    "Hamish",
    "hamishmorgan",
    "hexdigit",
    "indicatif",
    "importmap",
    "inputrc",
    "interruptible",
    "isospin",
    "Jsonify",
    "kamal",
    "killswitch",
    "klass",
    "lrwxr",
    "macroquad",
    "mapfile",
    "merch",
    "metafield",
    "metafields",
    "metavar",
    "multishape",
    "multispace",
    "ncols",
    "ndarray",
    "nodoc",
    "normalised",
    "noreturn",
    "nrows",
    "nullglob",
    "Omakase",
    "OVERLINED",
    "Parseable",
    "pathfinding",
    "preorder",
    "propshaft",
    "repr",
    "restow",
    "Rgba",
    "regexes",
    "rsudoku",
    "rubocop",
    "rustup",
    "scrollback",
    "Seedable",
    "seekable",
    "shellcheck",
    "shopt",
    "Shipify",
    "signum",
    "Smush",
    "snowdevil",
    "snowdevils",
    "statsd",
    "stowrc",
    "thiserror",
    "toolname",
    "toptal",
    "ulps",
    "unfulfill",
    "uninlined",
    "unmatch",
    "unranked",
    "unsplit",
    "unstock",
    "UNSUBMITTED",
    "xlarge",
    "Xpresspost",
    "zalgo",
    "zoneinfo"
  ],
  // Rust Analyzer
  "rust-analyzer.workspace.symbol.search.excludeImports": true,
  "rust-analyzer.showSyntaxTree": true,
  "rust-analyzer.testExplorer": true,
  "rust-analyzer.assist.emitMustUse": true,
  "rust-analyzer.check.command": "clippy",
  // VS Icons
  "vsicons.dontShowNewVersionMessage": true,
  // Red Hat telemetry
  "redhat.telemetry.enabled": false,
  // JavaScript/TypeScript
  "javascript.updateImportsOnFileMove.enabled": "always",
  // Telemetry
  "telemetry.editStats.enabled": false,
  // Comment highlighting (TODO, FIXME, etc)
  "highlight.regexes": {
    "((?:<!-- *)?(?:#|// @|//|./\\*+|<!--|--|\\* @|{!|{{!--|{{!) *TODO(?:\\s*\\([^)]+\\))?:?)((?!\\w)(?: *-->| *\\*/| *!}| *--}}| *}}|(?= *(?:[^:]//|/\\*+|<!--|@|--|{!|{{!--|{{!))|(?: +[^\\n@]*?)(?= *(?:[^:]//|/\\*+|<!--|@|--(?!>)|{!|{{!--|{{!))|(?: +[^@\\n]+)?))": {
      "filterFileRegex": ".*(?<!CHANGELOG.md)$",
      "decorations": [
        {
          "overviewRulerColor": "#ffcc00",
          "backgroundColor": "#ffcc00",
          "color": "#1f1f1f",
          "fontWeight": "bold"
        },
        {
          "backgroundColor": "#ffcc00",
          "color": "#1f1f1f"
        }
      ]
    },
    "((?:<!-- *)?(?:#|// @|//|./\\*+|<!--|--|\\* @|{!|{{!--|{{!) *(?:FIXME|FIX|BUG|UGLY|DEBUG|HACK)(?:\\s*\\([^)]+\\))?:?)((?!\\w)(?: *-->| *\\*/| *!}| *--}}| *}}|(?= *(?:[^:]//|/\\*+|<!--|@|--|{!|{{!--|{{!))|(?: +[^\\n@]*?)(?= *(?:[^:]//|/\\*+|<!--|@|--(?!>)|{!|{{!--|{{!))|(?: +[^@\\n]+)?))": {
      "filterFileRegex": ".*(?<!CHANGELOG.md)$",
      "decorations": [
        {
          "overviewRulerColor": "#cc0000",
          "backgroundColor": "#cc0000",
          "color": "#1f1f1f",
          "fontWeight": "bold"
        },
        {
          "backgroundColor": "#cc0000",
          "color": "#1f1f1f"
        }
      ]
    },
    "((?:<!-- *)?(?:#|// @|//|./\\*+|<!--|--|\\* @|{!|{{!--|{{!) *(?:REVIEW|OPTIMIZE|TSC)(?:\\s*\\([^)]+\\))?:?)((?!\\w)(?: *-->| *\\*/| *!}| *--}}| *}}|(?= *(?:[^:]//|/\\*+|<!--|@|--|{!|{{!--|{{!))|(?: +[^\\n@]*?)(?= *(?:[^:]//|/\\*+|<!--|@|--(?!>)|{!|{{!--|{{!))|(?: +[^@\\n]+)?))": {
      "filterFileRegex": ".*(?<!CHANGELOG.md)$",
      "decorations": [
        {
          "overviewRulerColor": "#00ccff",
          "backgroundColor": "#00ccff",
          "color": "#1f1f1f",
          "fontWeight": "bold"
        },
        {
          "backgroundColor": "#00ccff",
          "color": "#1f1f1f"
        }
      ]
    },
    "((?:<!-- *)?(?:#|// @|//|./\\*+|<!--|--|\\* @|{!|{{!--|{{!) *(?:IDEA)(?:\\s*\\([^)]+\\))?:?)((?!\\w)(?: *-->| *\\*/| *!}| *--}}| *}}|(?= *(?:[^:]//|/\\*+|<!--|@|--|{!|{{!--|{{!))|(?: +[^\\n@]*?)(?= *(?:[^:]//|/\\*+|<!--|@|--(?!>)|{!|{{!--|{{!))|(?: +[^@\\n]+)?))": {
      "filterFileRegex": ".*(?<!CHANGELOG.md)$",
      "decorations": [
        {
          "overviewRulerColor": "#cc00cc",
          "backgroundColor": "#cc00cc",
          "color": "#1f1f1f",
          "fontWeight": "bold"
        },
        {
          "backgroundColor": "#cc00cc",
          "color": "#1f1f1f"
        }
      ]
    }
  },
  // ============================================================================
  // Remote Development
  // ============================================================================
  "remote.SSH.connectTimeout": 150,
  "window.commandCenter": true
}
